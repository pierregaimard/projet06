<li class="col">
    <div class="card bg-dark border-1 border-light">
        <a href="{{ view }}">
            <img src="{{ asset('tricks_images/' ~ imageName) }}" class="card-img-top" alt="Flips cork">
        </a>
        <div class="card-body text-light p-4">
            <h6 class="category card-title fw-bolder snow m-0">{{ category }}</h6>
            <p class="name fs-5 fw-bold m-0">{{ name }}</p>
            <p class="card-text fw-lighter my-2">{{ description }}</p>
            {% if app.user is not null %}
                <div class="mt-3">
                    <a href="{{ edit }}" class="btn btn-outline-light"><i class="bi bi-pencil"></i></a>
                    <a href="{{ remove }}" class="btn btn-outline-light"><i class="bi bi-trash"></i></a>
                </div>
            {% endif %}
        </div>
    </div>
</li>