<div class="col">
    <div class="card bg-dark border-0">
        <a href="{{ view }}">
            <img src="{{ asset('tricks_images/' ~ imageName ~ '.jpg') }}" class="card-img-top" alt="Flips cork">
        </a>
        <div class="card-body text-light p-4">
            <h6 class="card-title fw-bolder snow m-0">{{ category }}</h6>
            <p class="fs-5 fw-bold m-0">{{ name }}</p>
            <p class="card-text fw-lighter my-2">{{ description }}</p>
            <div class="mt-3">
                <a href="{{ edit }}" class="btn btn-outline-light"><i class="bi bi-pencil"></i></a>
                <a href="{{ remove }}" class="btn btn-outline-light"><i class="bi bi-trash"></i></a>
            </div>
        </div>
    </div>
</div>