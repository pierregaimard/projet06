<section id="trick-view-heading-section" class="position-relative overflow-hidden">
    <img
            class="position-absolute top-50 start-50 translate-middle"
            src="{{ trick_images_dir ~ trick.headingImage.fileName }}"
            alt="{{ trick.name }} figure picture"
    >
    <div class="position-absolute top-50 start-0 translate-middle-y">
        <h1 class="m-0">
            <span class="display-1 px-3 pb-1 fw-lighter bg-dark snow">
                [<b class="fw-bolder">{{ trick.category.name }}</b>]
            </span>
        </h1>
        <h2 class="m-0">
            <span class="display-1 px-3 fw-lighter bg-dark text-light">
                {{ trick.name }}
            </span>
        </h2>
    </div>
    {% if app.user is not null and app.user.active and headingForm is not null%}
        <div class="position-absolute end-0 top-0 m-4 p-2 bg-light rounded-3 shadow">
            <button
                type="button"
                class="btn btn-outline-dark delete-trick-button"
                data-bs-toggle="modal"
                data-bs-target="#trick-edit-heading-change-modal"
            >
                <i class="bi bi-pencil"></i>
            </button>
            <a href="{{ path('trick_remove_heading_image', {'id': trick.id}) }}" class="btn btn-outline-dark me-1">
                <i class="bi bi-trash"></i>
            </a>
        </div>
    {% endif %}
</section>